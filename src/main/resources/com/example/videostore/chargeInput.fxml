<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="322.0" prefWidth="391.0" style="-fx-background-color: #FFEB00;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.videostore.Controller.ChargeControl">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="286.0" text="Enter amount of money you want to top up" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <HBox alignment="CENTER" prefHeight="66.0" prefWidth="391.0">
         <children>
            <TextField fx:id="balanceInput" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="31.0" prefWidth="100.0" />
            <Label prefHeight="34.0" prefWidth="33.0" text="\$">
               <font>
                  <Font name="System Bold Italic" size="24.0" />
               </font></Label>
         </children>
      </HBox>
      <Label fx:id="validation" alignment="CENTER" prefHeight="18.0" prefWidth="425.0" textAlignment="CENTER" />
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#topUpBalance" style="-fx-background-color: #000000;" text="TOP UP" textFill="#f8f8f8" fx:id="topUpBtn">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
   </children>
</VBox>
