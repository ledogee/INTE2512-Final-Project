<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="322.0" prefWidth="391.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.videostore.Controller.ChargeControl">
   <children>
      <Label prefHeight="45.0" prefWidth="286.0" text="Enter amount of money you want to top up:" textAlignment="CENTER" />
      <HBox alignment="CENTER" prefHeight="66.0" prefWidth="391.0">
         <children>
            <TextField fx:id="balanceInput" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="31.0" prefWidth="100.0" />
            <Label prefHeight="34.0" prefWidth="33.0" text="\$" />
         </children>
      </HBox>
      <Label fx:id="validation" alignment="CENTER" prefHeight="18.0" prefWidth="425.0" textAlignment="CENTER" />
      <Button mnemonicParsing="false" onAction="#topUpBalance" text="TOP UP!" />
   </children>
</VBox>
